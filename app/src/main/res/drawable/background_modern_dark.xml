<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#1a1a2e"
                android:centerColor="#16213e"
                android:endColor="#0f3460"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Floating elements overlay -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#20ffffff"
                android:centerColor="#10ffffff"
                android:endColor="#05ffffff"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle texture layer -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="225"
                android:startColor="#15ffffff"
                android:centerColor="#08ffffff"
                android:endColor="#03ffffff"
                android:type="linear" />
        </shape>
    </item>
</layer-list>