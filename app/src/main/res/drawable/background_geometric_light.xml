<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#667eea"
                android:centerColor="#764ba2"
                android:endColor="#f093fb"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Geometric overlay -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#30ffffff"
                android:centerColor="#15ffffff"
                android:endColor="#08ffffff"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle texture -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="225"
                android:startColor="#20ffffff"
                android:centerColor="#05ffffff"
                android:endColor="#00ffffff"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
