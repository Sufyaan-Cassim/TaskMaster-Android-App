<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient using theme colors -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="?attr/colorPrimary"
                android:centerColor="?attr/colorSecondary"
                android:endColor="?attr/colorTertiary"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle overlay -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="?android:attr/colorBackground"
                android:centerColor="?android:attr/colorBackground"
                android:endColor="?android:attr/colorBackground"
                android:type="linear" />
        </shape>
    </item>
</layer-list>